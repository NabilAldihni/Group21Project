<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Group21Project" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Base.Theme.Group21Project" parent="Theme.Material3.DayNight.NoActionBar">

    </style>
        <style name="ToolbarStyle">
            <item name="android:textColor">@android:color/white</item>
            <item name="android:textSize">18sp</item>
        </style>

    <style name="HelperTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FF0000</item>

    </style>

    <style name="Widget.AppTheme.TextInputLayout.FilledBox.Dense" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxStrokeColor">@color/selector</item>
        <item name="boxStrokeWidth">6dp</item>
        <item name="hintTextColor">#FFFFFF</item>
        <item name="errorTextColor">#FF0000</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="colorPrimary">#FFFFFF</item>
        <item name="android:textStyle">bold</item> <!-- Set your desired text style -->
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">28dp</item>

    </style>

    <style name="ErrorAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FF0000</item> <!-- Set your desired text color -->
        <item name="android:textStyle">bold</item> <!-- Set your desired text style -->
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16dp</item>
        <!-- You can add more styling attributes as needed -->
    </style>

    <style name="passtoast">
        <item name="stTextColor">#FFFF</item>
        <item name="stColorBackground">#11CA4E</item>
        <item name="stSolidBackground">true</item>
        <item name="stFont">@font/roboto_bold</item>
        <item name="stTextSize">20sp</item>
        <item name="stLength">LONG</item> LONG or SHORT
        <item name="stGravity">center</item> top or center
</style>

    <style name="failtoast">
        <item name="stTextColor">#FFFF</item>
        <item name="stColorBackground">#FF0000</item>
        <item name="stSolidBackground">true</item>
        <item name="stFont">@font/roboto_bold</item>
        <item name="stTextSize">20sp</item>
        <item name="stLength">LONG</item> LONG or SHORT
        <item name="stGravity">center</item> top or center
    </style>






</resources>